{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    //no need import React from 'react'
    "jsx": "react-jsx",
    //work with js as well as ts
    "allowJs": true,
    "moduleResolution": "node",
    //for absolute import
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "*": ["./src/*"]
    },
    //use import, export as require() in common js
    "esModuleInterop": true,
    //instead of import * as React from 'react' can use import React from 'react'
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}